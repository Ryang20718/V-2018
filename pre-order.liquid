{% schema %}
{
"blocks":[
{
"type":"info",
"name":"Pre-Order Products",
"settings":[
{
"type":"text",
"id":"ETA-date",
"label":"ETA-date (e.g. 09-20-2018)",
"placeholder":"08-20-2018"
},
	  {
        "type": "product",
        "id": "productLink",
        "label": "Pre-Order Products"
      }
]
}
]
}
{% endschema %}


{% assign index = 0 %}
{% assign array = all_products[blocks.settings.productLink] %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'info' %}
<p>{{array}}</p>
  <a href="/products/{{block.settings.productLink}}">h1</a>
  {% endcase %}
{% endfor %}





