{% schema %}
{
"blocks":[
{
"type":"info",
"name":"Pre-Order Products",
"settings":[
{
"type":"text",
"id":"ETA-date",
"label":"ETA-date (e.g. 09-20-2018)",
"placeholder":"08-20-2018"
},
	  {
        "type": "product",
        "id": "productLink",
        "label": "Pre-Order Products"
      }
]
}
]
}
{% endschema %}

{% assign arrayOfProdID = "" %}



{% for block in section.blocks %}
  {% case block.type %}
    {% when 'info' %}
		{% assign arrayOfProdID = arrayOfProdID | append: '-' | append: all_products[block.settings.productLink].id %}
  {% endcase %}
{% endfor %}





